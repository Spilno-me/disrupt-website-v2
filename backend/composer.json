{
    "name": "disrupt/backend-tests",
    "description": "PHPUnit tests for Disrupt PHP backend",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Disrupt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Disrupt\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}